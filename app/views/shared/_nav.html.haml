.navbar.no-margin
  .navbar-inner
    .container
      = link_to image_tag('loop-header-logo.png', style: "height: 55px;"), root_url, class: 'brand'
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .nav-collapse.collapse
        %ul.nav.pull-right
          - if params[:controller] == "home" && params[:action] == "landing_page"
            %li= link_to "LEARN MORE", "#expand", :class => "scroll"
            %li= link_to "PRICING", "#pricing", :class => "scroll"
            %li= link_to "APPLY", "#pricing", :class => "scroll"
          - else
            %li= link_to "PEOPLE", href="http://people.loopmeetings.com"
            %li= link_to "MEETINGS", meetings_path
            %li= link_to "EVENTS", events_path
            %li= link_to "MEMBERSHIP", membership_path
            %li= link_to "JOIN", apply_path

