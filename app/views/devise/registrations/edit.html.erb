<div class="container">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <%= simple_form_for(resource, :as => resource_name, 
                                :url => registration_path(resource_name), 
                                :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.input :full_name, :autofocus => true %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :birthday, as: :date, order: [:month, :day, :year], start_year: Date.today.year - 90, end_year: Date.today.year %>
    <%= f.input :password %><i>(leave blank if you don't want to change it)</i>
    <%= f.input :password_confirmation %>
    
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <fieldset>
      <%= f.input :linkedin %>
      <%= f.input :employer %>
      <%= f.input :job_title %>
      <%= f.input :job_description, as: :text, input_html: { rows: 5 } %>
      <%= f.input :hobbies, as: :text, input_html: { rows: 5 } %>
      <%= link_to File.basename(current_user.resume.path), current_user.resume.url if current_user.resume %>
      <%= f.input :resume %>
    </fieldset>

    <fieldset>
      <%= f.input :networking_goals, as: :check_boxes, collection: ["Making $$", "Meeting people"] %>
    </fieldset>
    
    <%= f.input :current_password %><i>(we need your current password to confirm your changes)</i>
    
    <div><%= f.submit "Update", class: "btn" %></div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-danger btn-mini" %></p>
</div>