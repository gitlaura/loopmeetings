.navbar.no-margin
  .navbar-inner{style: "background: #fff;" }
    .container
      = link_to image_tag('logo.png', style: "height: 42px;"), root_url, class: 'brand'
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .nav-collapse.collapse
        %ul.nav.pull-right
          %li
            = link_to "HOW IT WORKS", "#howitworks", class: "scroll"
          %li
            = link_to "LEARN MORE", learn_more_path
          - if user_signed_in?
            %li= link_to "SIGN OUT", destroy_user_session_path, method: :delete
          - else
            %li= link_to "APPLY", new_user_registration_path
            %li= link_to "SIGN IN", new_user_session_path
