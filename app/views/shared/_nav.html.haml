.navbar.no-margin
  .navbar-inner
    .container
      = link_to image_tag('logo.png', style: "height: 42px;"), root_url, class: 'brand'
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .nav-collapse.collapse
        %ul.nav.pull-right
          - if params[:controller] == "home" && params[:action] == "index"
            %li= link_to "HOW IT WORKS", "#howitworks", class: "scroll"
          - else
            %li= link_to "HOW IT WORKS", root_url+"#howitworks"
          %li= link_to "LEARN MORE", learn_more_path
          %li= link_to "APPLY", new_user_registration_path

